---
layout: layouts/home.njk
---

<div class="hero">

  <div class="centre container with-padding">

    <div class="stack">

      <h1>Family-Friendly Caf√© and Restaurant Recommendations.</h1>

      <p>Find local places with good vibes and varied menus the whole fam will love.</p>

    </div>

  </div>

</div>

<div class="content centre container with-padding">

  <div class="stack">

    <section class="stack">

      <h2>Where are you?</h2>

      <ul class="custom city-list">

        {% for city in collections.cityList %}
          {% set cityUrl %}/cities/{{ city }}/{% endset %}
          <li><a href="{{ cityUrl | url }}" class="city">{{ city }}</a></li>
        {% endfor %}

      </ul>

      <!-- <p>Browse <a href="{{ '/cities/' | url }}">all cities</a>.</p> -->

    </section>

    <section class="stack">

      <h2>Recently Added</h2>

      {% set postslist = collections.posts | head(-3) %}
      {% include "postslist.njk" %}

      <p>See <a href="{{ '/posts/' | url }}">all places in all cities</a>.</p>

    </section>

    <section class="stack">

      <h2>Browse by tag</h2>

      <div class="cluster">
        <ul class="custom">
        {% for tag in collections.tagList %}
          {% set tagUrl %}/tags/{{ tag }}/{% endset %}
          <li><a href="{{ tagUrl | url }}" class="tag">#{{ tag }}</a></li>
        {% endfor %}
        </ul>
      </div>

    </section>

  </div> <!-- /.stack -->

</div> <!-- .centre.container -->


